{
  "name": "directdrive-authority-engine",
  "version": "1.0.0",
  "description": "DirectDrive Authority Engine - AI Citation Monitoring and Content Generation System",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "setup": "bash setup.sh",
    "dev": "npm run dev --workspaces",
    "dev:dashboard": "cd apps/dashboard && npm run dev",
